<div class="container">
	<div class="row">
		<br>
		<br>
		<div class="col-xs-12 text-center" id="top-bar">
			<img src="/assets/images/logo.png" alt="burger" id="logo" />
			<h1> Eat-Da-Burger! </h1>
		</div>
		<div class="col-xs-7 text-center" class="task">
			<div class="row">
			  {{#each burger_data}}
			  	{{#unless this.devoured}}
				<div class="col-xs-8 text-center">
					<pre>{{this.id}}. {{this.burger_name}}
					</pre>
				  		<!-- {{this.Date}} -->
				</div>
				<div class="col-xs-4 text-center">
					<form method="POST" action="/burgers/update?_method=PUT" class="button-size">
						<input input type="hidden" type="text" name="burger_id" value={{this.id}}><br>
						<button type="submit" class="btn btn-danger">Devour it!</button>
					</form>
				</div>
				{{/unless}}
			  {{/each}}
			</div>
		</div>
		<div class="col-xs-5 text-center" class="task">
			  {{#each burger_data}}
			  	{{#if this.devoured}}
			  		<input id="list-item" class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
				{{/if}}
			  {{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center enter_section">
			<form action="/burgers/create" method="POST">
				<input type="text" class="form-control" name="burger_name" value="" id="enter_text">
				<button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
			</form>
			<p>SUBMIT A NEW BURGER!</p>
		</div>
	</div>
</div>
